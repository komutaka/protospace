= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "container user-new" }) do |f|
  = devise_error_messages!
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            / %input{:type => "text", :placeholder => "Username"}/
            = f.text_field :nickname, placeholder: "Nickname", autofocus: true, required: true, id: "user_username"
          .user-image.col-md-2
            %button.btn.btn-primary Add image
            = f.file_field :avatar, required: true, id: "upload_avatar"
        = f.text_field :email, placeholder: "E-Mail", class: "user-email"
        = f.text_field :password, placeholder: "Password", class: "user-password", required: true, id: "user_password"
        / %input.user-password{:type => "password", :placeholder => "Password"}/
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member", required: true, id: "user_group"
            / %input{:type => "text", :placeholder => "Member"}/
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_field :profile, placeholder: "Profile", required: true, id: "user_profile"
            / %textarea{:name => "textarea", :cols => "30", :rows => "4", :placeholder => "Profile"}
        %h4 Work
        .user-name_image.row
          .user-name.col-md-12
            = f.text_field :work, placeholder: "work", required: true, id: "user_work"
            / %textarea{:name => "textarea", :cols => "30", :rows => "4", :placeholder => "Works"}
  .row.text-center.user-btn
    %button.btn.btn-lg.btn-primary.btn-block{ type: "submit" } Save
