= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "container user-new" }) do |f|
  = devise_error_messages!
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :nickname, placeholder: "Nickname", autofocus: true, required: true
          .user-image.col-md-2#new-user-avatar
            %button.btn.btn-primary Add image
            = f.file_field :avatar, required: true
        = f.email_field :email, placeholder: "E-Mail", class: "user-email"
        = f.password_field :password, placeholder: "Password", class: "user-password", required: true
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member", required: true
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, placeholder: "Profile", required: true
        %h4 Work
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :work, placeholder: "work", required: true
  .row.text-center.user-btn
    = f.button class: "btn btn-lg btn-primary btn-block"
