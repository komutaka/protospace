= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "container user-new", method: :put } ) do |f|
  = devise_error_messages!
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :nickname, placeholder: "nickname", autofocus: true, required: true, id: "user_username"
          .user-image.col-md-2{ style: 'background-image: ' }
            %button.btn.btn-primary Change image
            = f.file_field :avatar, required: true, id: "upload_avatar"
        = f.text_field :email, placeholder: "E-Mail", class: "user-email"
        = f.password_field :current_password, placeholder: "Password", class: "user-password", required: true, id: "user_password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member", required: true, id: "user_group"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_field :profile, placeholder: "Profile", required: true, id: "user_profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_field :work, placeholder: "work", required: true, id: "user_work"
    .row.text-center.user-btn
      = f.submit :Save, class: "btn btn-lg btn-primary btn-block"
