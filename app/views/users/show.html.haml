.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(@user.avatar, alt: "64Ã—64", class: "media-object", style: "width: 64px; height: 64px;")
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.nickname
          %span.label.label-default.project-number
            = @user.projects.count
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Work
            %p
              = @user.work
.container.proto-list
  .row
    = render partial: "projects/project", collection: @projects

.text-center
  = paginate @projects
