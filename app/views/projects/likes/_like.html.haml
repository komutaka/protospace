- if user_signed_in?
  -if like_user.exists?(project_id: @project)
    = button_to project_like_path(@project, @like), method: :delete, class: "btn btn-default decrement-button", remote: true do
      = image_tag("icon_heart_red.svg")
      LIKE
      %span.num
        = @project.likes.count
  - else
    = button_to project_likes_path(@project), method: :post, class: "btn btn-default increment-button", remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num
        = @project.likes.count
