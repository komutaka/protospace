.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag("#{project.images.main.first.image}"), project_path(project)
    .caption
      %h3
        = project.title
      .proto-meta
        .proto-user
          = link_to "by #{project.user.nickname}", user_path(project.user.id)
        .proto-posted
          = project.created_at.strftime("%b %d")
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
