.col-md-8#comment_area
  .media
    .media-left
      = link_to image_tag("#{comment.user.avatar}", alt: "64x64", style: "width: 64px; height: 64px;", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", class: "media-object"), user_path(comment.user)
    .media-body
      %h4.media-heading#top-aligned-media
        = link_to "#{comment.user.nickname}", user_path(comment.user), class: "anchorjs-link"
      %p
        = comment.comment
